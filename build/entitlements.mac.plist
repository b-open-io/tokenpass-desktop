<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow unsigned executables (required for bundled Node.js server) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Allow JIT compilation (required for JavaScript engines) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Disable library validation (required for Electron) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Network client access (for local server communication) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- Network server access (for local server on port 21000) -->
    <key>com.apple.security.network.server</key>
    <true/>

    <!-- Files access (for user data storage) -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
